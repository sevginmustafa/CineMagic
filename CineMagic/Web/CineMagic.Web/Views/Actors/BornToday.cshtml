@using CineMagic.Web.ViewModels.People
@model IEnumerable<PersonStandartViewModel>

@{
    this.ViewData["Title"] = "Actors";
}

<div class="wthree_agile-requested-movies">
    @foreach (var person in Model)
    {
        <div class="col-md-2 w3l-movie-gride-agile requested-movies">
            <a href="single.html" class="hvr-sweep-to-bottom">
                <img src="@person.ProfilePicPath" title="@person.Name" class="img-responsive">
                <div class="w3l-action-icon"></div>
            </a>
            <div class="mid-1 agileits_w3layouts_mid_1_home">
                <div class="w3l-movie-text">
                    <h6><a class="text-left" href="single.html">@person.Name</a></h6>
                </div>
                <div class="mid-2 agile_mid_2_home">
                    <p>@person.Birthplace</p>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="ribben one male">
                <p>@person.Popularity.ToString("f2")</p>
            </div>
        </div>
    }
    <div class="clearfix"></div>
</div>

