@model CineMagic.Web.ViewModels.InputModels.Users.AjaxLoginInputModel

<div class="modal fade" id="myModal4" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4>Login</h4>
                <div class="login-form">
                    <form id="formLoginAjax" asp-area="" asp-controller="Users" asp-action="AjaxLogin" method="post">
                        <input asp-for="Email" placeholder="E-mail">
                        <input asp-for="Password" placeholder="Password">
                        <div class="tp">
                            <input type="submit" value="LOGIN NOW">
                        </div>
                        <div class="forgot-grid">
                            <div class="log-check">
                                <label class="checkbox"><input type="checkbox" name="checkbox">Remember me</label>
                            </div>
                            <div class="forgot">
                                <a asp-area="Identity" asp-page="/Account/ForgotPassword" data-target="#myModal2">Forgot Password?</a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#formLoginAjax').submit(function (event) {
        event.preventDefault();
        var json = { success: false, message: '', action: '' };
        $.ajax({
            type: 'POST',
            dataType: 'json',
            url: $('#formLoginAjax').attr('action'),
            xhrFields: {
                withCredentials: true
            },
            data: $('#formLoginAjax').serialize(),
            beforeSend: function () {
                $('.shadow').show(900);
            },
            success: function (data) {
                json = data;
            },
            error: function (errorThrown) {
                json.message = 'Request failed: ' + errorThrown;
            },
            complete: function () {
                $('.shadow').hide(900);
                if (json.success) {
                    $('#myModal').modal('hide');
                    window.location = json.action;
                }
                else {
                    let span = document.getElementById("login-error");
                    span.style.display = "block";
                    span.style.marginBottom = "2.5vh"; // 2,5% from virtual screen
                }
            }
        });
    });
</script> 