@using CineMagic.Web.ViewModels.Movies
@model PaginatedList<MoviesAdministrationViewModel>

@{
    this.ViewData["Title"] = "All Movies";
    this.ViewData["ActivePage"] = MovieNavPages.Movies;
}

@{
    int counter = 1;

    if (Model.PageNumber > 1)
    {
        counter = Model.PageNumber * 10 - 9;
    }
}

<div class="w3_content_agilleinfo_inner">
    <div class="agile_featured_movies">
        <div class="inner-agile-w3l-part-head">
            <h3 class="w3l-inner-h-title">@this.ViewData["Title"]</h3>
        </div>
        <div class="w3ls-news-result">
            <h4>Results Returned: <span>@Model.Count</span></h4>
        </div>

        <div id="myTabContent" class="tab-content">
            <div role="tabpanel" class="tab-pane fade in active" id="home" aria-labelledby="home-tab">
                <div class="agile-news-table">
                    <table id="table-breakpoint">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Title</th>
                                <th>DirectorName</th>
                                <th>Year</th>
                                <th>Runtime</th>
                                <th>Budget</th>
                                <th>Revenue</th>
                                <th>Popularity</th>
                                <th>Edit / Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var movie in Model)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td class="w3-list-img"><a><img src="@movie.PosterPath" /> <span>@movie.Title</span></a></td>
                                    <td>@movie.DirectorName</td>
                                    <td>@movie.ReleaseDate.Year</td>
                                    <td>@movie.Runtime min</td>
                                    <td>$@movie.Budget</td>
                                    <td>$@movie.Revenue</td>
                                    <td>@movie.Popularity.ToString("f2")</td>
                                    <td>
                                        <form asp-action="Edit" asp-route-id="@movie.Id" method="get">
                                            <button type="submit" class="badge badge-warning">Edit</button>
                                        </form>
                                        <form asp-action="Delete" asp-route-id="@movie.Id" method="post" id="deleteForm">
                                        </form>
                                        <button type="submit" class="badge badge-danger" data-toggle="modal" data-target="#modalDelete">Delete</button>
                                    </td>
                                </tr>

                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <div class="blog-pagenat-wthree">
        <ul class="pagination">
            <li class="page-item @if (!Model.HasPreviousPage) {<text>disabled</text>}">
                <a class="page-link" asp-area="Administration" asp-controller="Movies" asp-action="GetAll">First</a>
            </li>
            <li class="page-item @if (!Model.HasPreviousPage) {<text>disabled</text>}">
                <a class="page-link" asp-area="Administration" asp-controller="Movies" asp-action="GetAll" asp-route-page="@Model.PreviousPage">Previous</a>
            </li>
            @for (int i = Model.PageNumber - 3; i < Model.PageNumber; i++)
            {
                if (i > 0)
                {
                    <li class="page-item">
                        <a class="page-link" asp-area="Administration" asp-controller="Movies" asp-action="GetAll" asp-route-page="@i">@i</a>
                    </li>
                }
            }
            <li class="page-item active">
                <span class="page-link">
                    @Model.PageNumber
                    <span class="sr-only">(current)</span>
                </span>
            </li>
            @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 3; i++)
            {
                if (i <= Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-area="Administration" asp-controller="Movies" asp-action="GetAll" asp-route-page="@i">@i</a>
                    </li>
                }
            }
            <li class="page-item @if (!Model.HasNextPage) {<text>disabled</text>}">
                <a class="page-link" asp-area="Administration" asp-controller="Movies" asp-action="GetAll" asp-route-page="@Model.NextPage">Next</a>
            </li>
            <li class="page-item @if (!Model.HasNextPage) {<text>disabled</text>}">
                <a class="page-link" asp-area="Administration" asp-controller="Movies" asp-action="GetAll" asp-route-page="@Model.TotalPages">Last</a>
            </li>
        </ul>
    </div>
}

<div class="modal" tabindex="-1" role="dialog" id="modalDelete">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <b>Are you sure you want to delete this movie?</b>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Yes</button>
            </div>
        </div>
    </div>
</div>