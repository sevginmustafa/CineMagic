@model CineMagic.Web.ViewModels.Privacies.PrivacyEditViewModel

@{
    this.ViewData["Title"] = "Edit Privacy";
    this.ViewData["ActivePage"] = PrivacyNavPages.Privacy;
}

<h2>@this.ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Edit Privacy</button>
        </form>
        <br />
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" id="deleteForm">
        </form>
        <button type="submit" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">Delete Privacy</button>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="modalDelete">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <b>Are you sure you want to delete the privacy?</b>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Yes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: "textarea",
            plugins: [
                "image paste table link code media"
            ]
        });
    </script>
}