@model CineMagic.Web.ViewModels.InputModels.Administration.PrivacyCreateInputModel

@{
    ViewData["Title"] = "Create Privacy";
    this.ViewData["ActivePage"] = PrivacyNavPages.Privacy;
}


<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control"> </textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Create Privacy</button>
        </form>
    </div>
</div>

@section Scripts{
    <script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: "textarea",
            plugins: [
                "image paste table link code media"
            ]
        });
    </script>
} 