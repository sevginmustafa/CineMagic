@using CineMagic.Web.ViewModels.Actors
@model PaginatedList<ActorAdministrationViewModel>

@{
    this.ViewData["Title"] = "All Actors";
    this.ViewData["ActivePage"] = ActorNavPages.Actors;
}

@{
    int counter = 1;

    if (Model.PageNumber > 1)
    {
        counter = Model.PageNumber * 10 - 9;
    }
}

<div class="w3_content_agilleinfo_inner">
    <div class="agile_featured_movies">

        <div class="inner-agile-w3l-part-head">
            <h3 class="w3l-inner-h-title">Movie List</h3>
            <p class="w3ls_head_para">From A To Z</p>
        </div>
        <div class="w3ls-news-result">
            <h4>Results Returned: <span>@Model.Count</span></h4>
        </div>

        <div id="myTabContent" class="tab-content">
            <div role="tabpanel" class="tab-pane fade in active" id="home" aria-labelledby="home-tab">
                <div class="agile-news-table">
                    <table id="table-breakpoint">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Name</th>
                                <th>Birthday</th>
                                <th>Age</th>
                                <th>Birthplace</th>
                                <th>Popularity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var actor in Model)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td class="w3-list-img"><a><img src="@actor.ProfilePicPath" /> <span>@actor.Name</span></a></td>
                                    <td>
                                        @if (actor.Birthday.HasValue)
                                        {
                                            @actor.Birthday.Value.ToString("MMM d, yyyy")
                                        }
                                    </td>
                                    <td>@actor.Age</td>
                                    <td>@actor.Birthplace</td>
                                    <td>@actor.Popularity.ToString("f2")</td>
                                </tr>

                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <div class="blog-pagenat-wthree">
        <ul class="pagination">
            <li class="page-item @if (!Model.HasPreviousPage) {<text>disabled</text>}">
                <a class="page-link" asp-area="Administration" asp-controller="Actors" asp-action="GetAll">First</a>
            </li>
            <li class="page-item @if (!Model.HasPreviousPage) {<text>disabled</text>}">
                <a class="page-link" asp-area="Administration" asp-controller="Actors" asp-action="GetAll" asp-route-page="@Model.PreviousPage">Previous</a>
            </li>
            @for (int i = Model.PageNumber - 3; i < Model.PageNumber; i++)
            {
                if (i > 0)
                {
                    <li class="page-item">
                        <a class="page-link" asp-area="Administration" asp-controller="Actors" asp-action="GetAll" asp-route-page="@i">@i</a>
                    </li>
                }
            }
            <li class="page-item active">
                <span class="page-link">
                    @Model.PageNumber
                    <span class="sr-only">(current)</span>
                </span>
            </li>
            @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 3; i++)
            {
                if (i <= Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-area="Administration" asp-controller="Actors" asp-action="GetAll" asp-route-page="@i">@i</a>
                    </li>
                }
            }
            <li class="page-item @if (!Model.HasNextPage) {<text>disabled</text>}">
                <a class="page-link" asp-area="Administration" asp-controller="Actors" asp-action="GetAll" asp-route-page="@Model.NextPage">Next</a>
            </li>
            <li class="page-item @if (!Model.HasNextPage) {<text>disabled</text>}">
                <a class="page-link" asp-area="Administration" asp-controller="Actors" asp-action="GetAll" asp-route-page="@Model.TotalPages">Last</a>
            </li>
        </ul>
    </div>
}