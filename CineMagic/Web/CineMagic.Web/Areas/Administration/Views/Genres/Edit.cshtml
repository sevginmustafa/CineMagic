@model CineMagic.Web.ViewModels.Genres.GenreEditViewModel

@{
    this.ViewData["Title"] = "Edit Genre";
    this.ViewData["ActivePage"] = GenreNavPages.Genres;
}

<h2>Edit Genre <b>@Model.Name</b> with ID: @Model.Id</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Edit Genre</button>
            <button asp-action="GetAll" class="btn btn-primary">Back to All Genres</button>
        </form>
        <br />
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" id="deleteForm">
        </form>
        <button type="submit" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete">Delete Genre</button>
    </div>
</div>


<div class="modal" tabindex="-1" role="dialog" id="modalDelete">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <b class="text-danger">Are you sure you want to delete this genre?</b>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger" onclick="deleteForm.submit()">Yes</button>
            </div>
        </div>
    </div>
</div>

